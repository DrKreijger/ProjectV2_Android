<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- État par défaut -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fond blanc -->
            <corners android:radius="8dp" /> <!-- Coins arrondis -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Bordure grise -->
        </shape>
    </item>

    <!-- État lorsque l'élément est sélectionné (effet de clic) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Fond gris clair -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#AAAAAA" /> <!-- Bordure grise plus foncée -->
        </shape>
    </item>
</selector>
